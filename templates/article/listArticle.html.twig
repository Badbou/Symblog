            <div class="card-body">
                <p class="card-text">le debut de mon article </p>
            </div>
            <div class="card-body">
                <a href="{{ path('viewarticle',{'id':one.id}) }}" class="card-link">lire l'article au complet </a>
                <a href="{{ path('deletearticle',{'id':one.id}) }}" class="card-link">Supprimer l'article </a>  
                <a href="{{ path('editarticle',{'id':one.id}) }}" class="card-link">edit l'article </a>            
            </div>
            <div class="card-footer text-muted">
                {{one.createdDate|date("m/d/Y")}}

                {{one.author.name}}
                
               


                
            </div>
        </div>
    {% endfor %}

 {% endblock body %}